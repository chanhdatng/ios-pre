---
interface Props {
  title: string;
  subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<header class="mb-8">
  <h1 class="text-3xl font-bold text-[var(--color-text-primary)]">{title}</h1>
  {subtitle && <p class="text-[var(--color-text-secondary)] mt-1">{subtitle}</p>}
</header>
